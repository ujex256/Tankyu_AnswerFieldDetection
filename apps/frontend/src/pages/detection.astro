---
import Layout from "../layouts/Layout.astro";
import MainProcessor from "../components/MainProcessor";
---

<Layout>
  <div class="flex-1 flex flex-col bg-blue-100">
    <main class="flex-1 mx-auto w-full max-w-5xl px-8 pt-6 pb-12 bg-blue-100">
      <section class="flex flex-col h-full bg-white double-border">
        <h3 class="px-8 py-4 text-2xl text-center font-semibold">写真を追加</h3>
        <!-- biome-ignore format: client :onlyになる -->
        <MainProcessor client:only />
      </section>
    </main>
  </div>
</Layout>

<style>
  .double-border {
    border: solid 5px #ceebff;
    border-radius: 13px; /* rounded-2xl */
    position: relative;
    z-index: 1;
  }
  .double-border::after {
    content: "";
    display: block;
    width: calc(100% + 17px);
    height: calc(100% + 17px);
    border: solid 5px #50b8ff;
    border-radius: 16px; /* rounded-2xl */
    position: absolute;
    top: -8px;
    left: -8px;
    z-index: -1;
  }
</style>
